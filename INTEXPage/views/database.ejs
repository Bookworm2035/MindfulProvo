<body id="page-top">
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top" id="mainNav">
        <!-- Your navigation content goes here -->
    </nav>

    <!-- Submission Form -->
    <header class="masthead">
        <!-- Your header content goes here -->
    </header>

    <!-- Services-->
    <section class="page-section" id="services">
        <div class="container">
            <!-- Your services content goes here -->

            <!-- Database Table -->
            <label><b>Records:</b></label>
            <br><br>
            <table style="width: 100%; background-color: antiquewhite; border: 1px solid black;">
                <!-- Table header -->
                <thead style="background-color: cornflowerblue; color: white;">
                    <tr>
                        <!-- Table column headers -->
                        <!-- Adjust these headers based on your actual column names -->
                        <th style="text-align: left;">Record Number</th>
                        <th style="text-align: left;">Date</th>
                        <th style="text-align: left;">Time</th>
                        <th style="text-align: left;">Occupation Status</th>
                        <th style="text-align: left;">Platform ID</th>
                        <th style="text-align: left;">Person ID</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <!-- Table body -->
                <tbody style="font-family: Arial; font-size: 9pt;">
                    <!-- Loop through records and populate the table -->
                    <% for (let iCount = 0; iCount < myRecords.length; iCount++) { %>
                    <tr>
                        <!-- Adjust these columns based on your actual column names -->
                        <td><%= myRecords[iCount].RecordNumber %></td>
                        <td><%= myRecords[iCount].Date %></td>
                        <td><%= myRecords[iCount].Time %></td>
                        <td><%= myRecords[iCount].OccupationStatus %></td>
                        <td><%= myRecords[iCount].PlatformID %></td>
                        <td><%= myRecords[iCount].PersonID %></td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
            <br><br>
        </div>
    </section>
</body>

